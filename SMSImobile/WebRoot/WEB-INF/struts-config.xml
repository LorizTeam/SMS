<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
 <form-beans> 
 	<form-bean name="loginForm" type="com.smsimobile.form.LoginForm" />
 	<form-bean name="importForm" type="com.smsimobile.form.ImportForm" />
  	<form-bean name="customerForm" type="com.smsimobile.form.CustomerForm" />
  </form-beans>
 <global-exceptions />
  <global-forwards />
  <action-mappings >
  
  <!--################################     Login     #################################-->
   <action
      attribute="loginForm"
      input="/login.jsp"
      name="loginForm"
      path="/login"
      scope="request"
      type="com.smsimobile.action.LoginAction" >
      
      <forward name="error" path="/login.jsp" />
      <forward name="success_amd" path="/supervisor.jsp" />
      <forward name="success_agt" path="/jsp/main.jsp" />
      <forward name="success_acc" path="/mainAccounting.jsp" />
    </action>
  <!--################################     Login     #################################-->
  
  <!--################################     import excel     #################################-->
  	<action path="/importExcelStart" 	name="importForm"  
  		type="com.smsimobile.action.ImportStartAction">
      	<forward name="success"  	path="/jsp/excel_import.jsp" />
    </action>
  	<action
      attribute="importForm"
      input="/jsp/excel_import.jsp"
      name="importForm"
      path="/importExcel"
      scope="request"
      type="com.smsimobile.action.ImportAction" >
      <forward name="success" path="/jsp/excel_import.jsp" />
    </action>
   <!--################################     import excel     #################################-->
  
  <!--################################     send SMS    #################################-->
  	<action path="/sendSMSStart" 	name="customerForm"  
  		type="com.smsimobile.action.SendSMSStartAction">
      	<forward name="success"  	path="/jsp/send_sms.jsp" />
    </action>
    <action
      attribute="customerForm"
      input="/jsp/send_sms.jsp"
      name="customerForm"
      path="/sendSMS"
      scope="request"
      type="com.smsimobile.action.SendSMSAction" >
      <forward name="success" path="/jsp/send_sms.jsp" />
    </action>
   <!--################################    send SMS    #################################-->
  
  </action-mappings>

  <message-resources parameter="com.yourcompany.struts.ApplicationResources" />
</struts-config>

